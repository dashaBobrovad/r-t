{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "ES2021.String", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "components": ["./src/components"],
      "helpers": ["./src/helpers"],
      "hooks": ["./src/hooks"],
      "layouts": ["./src/layouts"],
      "pages": ["./src/pages"],
      "redux": ["./src/redux"],
      "router": ["./src/router"],
      "styles": ["./src/styles"],
      "types": ["./src/types"],
      "S#/*": ["./static/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
